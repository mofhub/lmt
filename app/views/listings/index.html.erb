<h2>Property Listings</h2>

<div class="search">
<%= form_tag listings_path, :method => 'get' do %>
	<%= hidden_field_tag :direction, params[:direction] %>
	<%= hidden_field_tag :sort, params[:sort] %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Address Search", :name => nil %>
	<span class="add_new">	<%= link_to 'Add New Property', new_listing_path %></span>
	</p>
<% end %>		
</div>

<div class="stats_listings">Listings in the system: <b><%= number_with_delimiter(@listing_count) %></b></div>

<div class="results">
<%= render 'listings' %>
</div>

<br />
<div class="end_link"><%= link_to 'Add New Property', new_listing_path %></div>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th><%= sortable "email" %></th>
    <th>Property/Listing</th>
    <th></th>
    <th></th>
  </tr>

<%= will_paginate %>
<% @tenants.each do |tenant| %>
  <tr>
    <td><%= link_to(image_tag("user.png"), tenant) %></td><td><%= tenant.first_name %> <%= tenant.last_name %></td>
    <td><%= mail_to(tenant.email) %></td>
	<td><%= tenant.listing.address %></td>
    <td><%= link_to_icon 'Show', tenant %></td>
    <td><%= link_to_icon 'Edit', edit_tenant_path(tenant) %></td>
    <td><%= link_to_icon 'Destroy', tenant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate %>
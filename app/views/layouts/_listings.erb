<table>
  <tr>
	<th></th>
	<th><%= sortable "price" %></th>  
    <th><%= sortable "address" %></th>
	<th><%= sortable "city" %></th>  
    <th>Description</th>
	<th><%= sortable "property_type" %></td>
	<th><%= sortable "ad_type" %></th>	

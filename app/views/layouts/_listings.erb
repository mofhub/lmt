	<th></th>
  </tr>
  <tr>
	<%= will_paginate %>
	
	<% @listings.each do |listing| %>
	  <tr>

		<td><%= link_to(image_tag(listing.photo.url(:thumb)), listing) %></td>
	    <td><%= link_to listing.price, listing %></td>
	    <td><%= listing.address %></td>
	    <td><%= listing.city %></td>
		<td><%= truncate listing.content, :length => 40 %></td><!-- truncate amount of text output -->
		<td><%= listing.property_type %></td>
		<td><%= listing.ad_type %></td>
		<td><%= listing.landlord.company_name %>
		<td><%= listing.created_at.strftime("%B %e, %Y") %></td>	
      
	    <td><%= link_to_icon 'Show', listing %></td>
	    <td><%= link_to_icon 'Edit', edit_listing_path(listing) %></td>
	    <td><%= link_to_icon 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>	 
	 </tr>
	</table>
